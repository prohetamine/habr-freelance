{
  "name": "Хабр Фриланс",
  "description": "Будь всегда вкурсе событий на фрилансе!",
  "version": "1.4.90",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://freelance.habr.com/*",
    "https://habrastorage.org/*"
  ]
}
